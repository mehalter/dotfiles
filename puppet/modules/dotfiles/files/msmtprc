defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp/msmtp.log

account personal
host smtp.gmail.com
port 587
from tim@sharpe.id.au
user tim@sharpe.id.au
passwordeval "/usr/bin/pass google.com/tim@sharpe.id.au"

account puppet
host smtp.gmail.com
port 587
from tim.sharpe@puppet.com
user tim.sharpe@puppet.com
passwordeval "/usr/bin/pass google.com/tokens/puppet/$(hostname)"

account default : personal
